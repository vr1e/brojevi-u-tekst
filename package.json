{
	"name": "brojevi-u-tekst",
	"version": "0.1.0",
	"description": "A simple and robust library to convert numbers to Serbian words (pretvara brojeve u tekst). A perfect serbian-number-to-words utility.",
	"keywords": [
		"serbian",
		"serbia",
		"number",
		"words",
		"brojevi",
		"tekst",
		"rec",
		"cifre",
		"localization"
	],
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"test": "vitest",
		"build": "rm -rf dist && tsc",
		"format": "prettier --write \"**/*.{ts,md}\"",
		"prepublishOnly": "npm test -- --run && npm run build"
	},
	"author": "vr1e",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/vr1e/brojevi-u-tekst.git"
	},
	"homepage": "https://github.com/vr1e/brojevi-u-tekst#readme",
	"bugs": {
		"url": "https://github.com/vr1e/brojevi-u-tekst/issues"
	},
	"devDependencies": {
		"prettier": "^3.6.2",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	}
}
